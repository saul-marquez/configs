{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "console_title_template": "{{ if or .Root .Segments.Git.RepoName }}[ {{ if .Root }}Admin{{ end }}{{ if and .Root .Segments.Git.RepoName }}@{{ end }}{{ if .Segments.Git.RepoName }}{{ .Segments.Git.RepoName }}{{ end }} ]{{ end }} {{ .Folder }}",
  "palette": {
    "os": "#ACB0BE",
    "pink": "red",
    "lavender": "#B7BDF8",
    "blue":  "blue",
    "yellow": "yellow",
    "green": "green",
    "background-color": "transparent",
    "cloud-text-amazon": "#F5BDE6",
    "cloud-text-azure": "#8AADF4",
    "cloud-text-gcp": "#4285F4",
    "error-background": "#dd0033",
    "error-text": "#242424",
    "git-text": "#F5BDE6",
    "kubernetes-text": "#FFBB00",
    "symbol-color": "#ACB0BE",
    "timer-text": "#ACB0BE"
  },
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "p:background-color",
          "foreground": "p:timer-text",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "powerline",
          "powerline_symbol": "",
          "template": " <p:os>󱉊</> {{ dateInZone .Format .CurrentDate \"UTC\" }}",
          "type": "time"
        },
        {
          "background": "p:background-color",
          "foreground": "p:kubernetes-text",
          "style": "powerline",
          "powerline_symbol": "",
          "template": "<p:os></> {{.Context}}{{if .Namespace}}  {{.Namespace}}{{end}}",
          "type": "kubectl"
        },
        {
          "background": "p:background-color",
          "foreground": "p:cloud-text-amazon",
          "style": "powerline",
          "powerline_symbol": "",
          "template": " <p:os></> {{.Profile}}{{if .Region}}  {{.Region}}{{end}}",
          "type": "aws"
        },
        {
          "background": "p:background-color",
          "foreground": "p:blue",
          "properties": {
            "source": "cli"
          },
          "style": "powerline",
          "powerline_symbol": "",
          "template": " <p:os></> {{ .Name }}",
          "type": "az"
        },
        {
          "background": "p:background-color",
          "foreground": "p:blue",
          "properties": {
            "source": "pwsh"
          },
          "style": "powerline",
          "powerline_symbol": "",
          "template": " <p:os></> (PS) {{ .Name }}",
          "type": "az"
        },
        {
          "background": "p:background-color",
          "foreground": "p:blue",
          "style": "powerline",
          "powerline_symbol": "",
          "template": " <p:os></> {{ .RepoName}}",
          "type": "git"
        },
        {
          "background": "p:background-color",
          "foreground": "p:timer-text",
          "properties": {
            "style": "austin",
            "threshold": 1
          },
          "style": "powerline",
          "powerline_symbol": "",
          "template": " <p:os></> {{ .FormattedMs }}",
          "type": "executiontime"
        },
        {
          "background": "p:background-color",
          "foreground": "p:pink",
          "style": "diamond",
          "template": "{{ if ne .Code 0 }}  {{ .Code }}{{ if (ne (reason .Code) (toString .Code)) }}-{{ reason .Code }}{{else}}{{ end }} {{ end }}",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "p:background-color",
          "foreground": "p:timer-text",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "powerline",
          "powerline_symbol": "",
          "template": " <p:os>󱨒</> {{ .CurrentDate | date .Format }}",
          "type": "time"
        },
        {
          "background": "p:background-color",
          "foreground": "p:green",
          "properties": {
            "folder_separator_icon": "/",
            "style": "folder"
          },
          "style": "powerline",
          "template": " <p:os></> {{ path .Path .Location }}",
          "type": "path"
        },
        {
          "background": "p:background-color",
          "foreground": "p:yellow",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "style": "powerline",
          "template": " <p:os></> <p:blue>{{.HEAD}}</>{{ if gt .StashCount 0 }} <p:os> {{ .StashCount }}</>{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:pink{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "  ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ]
}
